<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/navigation_graph.xml"
    app:startDestination="@id/homeFragment">
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.marcelocuevas.mercadolibrechallenge.ui.fragment.HomeFragment"
        android:label="HomeFragment" >
        <action
            android:id="@+id/action_homeFragment_to_searchFragment"
            app:destination="@id/search_fragment" />
    </fragment>
    <fragment
        android:id="@+id/search_fragment"
        android:name="com.marcelocuevas.mercadolibrechallenge.ui.fragment.SearchFragment"
        android:label="SearchFragment" >
        <action
            android:id="@+id/action_searchFragment_to_productListFragment"
            app:destination="@id/product_list_fragment" />
    </fragment>
    <fragment
        android:id="@+id/product_list_fragment"
        android:name="com.marcelocuevas.mercadolibrechallenge.ui.fragment.ProductListFragment"
        android:label="ProductListFragment" >
        <action
            android:id="@+id/action_productListFragment_to_productDetailFragment"
            app:destination="@id/product_detail_fragment" />
    </fragment>
    <fragment
        android:id="@+id/product_detail_fragment"
        android:name="com.marcelocuevas.mercadolibrechallenge.ui.fragment.ProductDetailFragment"
        android:label="ProductDetailFragment" />
</navigation>